  <section class="login-section">
    <main class="mainContainer container">
      <div class="row">
        <div class="col-xl-6 col-lg-7 col-md-10 col-12 m-auto">
          <div class="login-form">
            <div>
              <div class="login-title">
                <h2 class="text-center mb-4">Sign Up</h2>
              </div>
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el=> { %>
                  <div class="alert alert-danger">
                    <%= el.msg %>
                  </div>
                  <% }) %>
                    <% } %>
                      <% if (locals.messages.info) { %>
                        <% messages.info.forEach( el=> { %>
                          <div class="alert alert-info">
                            <%= el.msg %>
                          </div>
                          <% }) %>
                            <% } %>
                              <form action="/signup" method="POST" class="theme-form">
                                <div class="mb-3">
                                  <label for="userName" class="form-label">User Name</label>
                                  <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter A User Name">
                                </div>
                                <div class="mb-3">
                                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                                  <input type="email" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" name="email" placeholder="Enter Email">
                                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                                  </div>
                                </div>
                                <div class="mb-3">
                                  <label for="password" class="form-label">Password</label>
                                  <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
                                </div>
                                <div class="mb-3">
                                  <label for="confirmPassword" class="form-label">Confirm Password</label>
                                  <input type="password" class="form-control" id="confirmPassword"
                                    name="confirmPassword" placeholder="Confirm Password">
                                </div>
                                <div class="btn-section">
                                  <button type="submit" class="btn btn-solid btn-lg">Sign up</button>
                                  <a href="/login" class="btn btn-solid btn-lg ms-auto">Login</a>
                                </div>
                              </form>
            </div>
          </div>

        </div>
      </div>
    </main>
  </section>
