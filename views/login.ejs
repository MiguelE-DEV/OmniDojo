<section class="login-section">
  <div class="mainContainer container">
    <div class="row">
      <div class="col-xl-6 col-lg-7 col-md-10 col-12 m-auto">
        <div class="login-form">
          <div>
            <div class="text-center login-title">
              <h2>Login</h2>
            </div>
            <!-- <div class="login-discription">
              <h3>Find, Create, Master</h3>
            </div> -->
            <div class="form-sec">
              <div>
                <% if (locals.messages.errors) { %>
                  <% messages.errors.forEach( el=> { %>
                    <div class="alert alert-danger">
                      <%= el.msg %>
                    </div>
                    <% }) %>
                      <% } %>
                        <% if (locals.messages.info) { %>
                          <% messages.info.forEach( el=> { %>
                            <div class="alert alert-info">
                              <%= el.msg %>
                            </div>
                            <% }) %>
                              <% } %>
                  <form action="/login" method="POST" class="theme-form">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter Email"
                        aria-describedby="emailHelp" name="email">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter Password" name="password">
                    </div>
                    <div class="btn-section">
                      <button type="submit" class="btn btn-solid btn-lg">Login</button>
                      <a href="/signup" class="btn btn-solid btn-lg ms-auto">Sign up</a>
                    </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


