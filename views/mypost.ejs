<%- include('partials/header') -%>
    <!-- loader start -->
    <div class="loading-text">
      <div>
          <h1 class="animate">Loading</h1>
      </div>
  </div>
  <!-- loader end -->
  <!-- </div> -->
  <div class="container-fluid section-t-space px-0 layout-default">
  <div class="mainContainer page-content">
      <div class="sticky-top content-left">
          <!-- profile box -->
          <div class="sticky-top profile-box">
              <div class="profile-content">
                  <a href="/profile" class="image-section">
                      <!-- <div class="profile-img" style="width: 100px; height: 100px;"> -->
                          <!-- <div class="" style="background-image: url(); background-size: cover; background-position: center center; background-repeat: no-repeat; display: block;"> -->
                              <!-- <img src="<%= user.image %>" class="img-fluid blur-up lazyload bg-img" alt="profile" style="width: 100%; height: 100%;"> -->
                          <!-- </div> -->
                      </div>
                  </a>
                  <div class="profile-detail">
                      <a href="/profile">
                          <!-- <h2><%= user.userName %></h2> -->
                      </a>
                      <!-- <h5><%= user.email %></h5> -->
                      <div class="mt-3 mb-3 text-center">
                          <div>
                            <h2>Filter:</h2>
                            <h2><%= user.filter %></h2>
                  </div>
                      <form class="createPost" action="/comment/filterBeginner/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST"><button class="mt-3 mb-3 btn btn btn-solid btn-sm ms-auto" type="submit">Beginner</button></form>
                      <form class="createPost" action="/comment/filterIntermediate/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST"><button class="mt-3 mb-3 btn btn btn-solid btn-sm ms-auto" type="submit">Intermediate</button></form>
                      <form class="createPost" action="/comment/filterAdvanced/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST"><button class="mt-3 mb-3 btn btn btn-solid btn-sm ms-auto" type="submit">Advanced</button></form>
                      <form class="createPost" action="/comment/filterUnfilter/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST"><button class="mt-3 mb-3  btn btn btn-solid btn-sm ms-auto" type="submit">Unfiltered</button></form>
                  </div>
                  </div>
              </div>

          <!-- suggestion box -->
          
          
      </div>
  <div class="content-center">
  <div class="post-panel infinite-loader-sec section-t-space">
      <!-- posts creater -->
      <% for(let i=0; i<posts.length; i++){ %>
        <% if( user.filter == posts[i].skill || user.filter == "Unfiltered"){ %>
        <% if( posts[i].attendance.includes(user.userName)){ %>
          <div class="post-panel infinite-loader-sec section-t-space">
              <!-- post start -->
              <div id="posts" class="post-wrapper col-grid-box section-t-space" style="display: block;">
                  <a id="postImg" href="/post/<%= posts[i]._id%>">
                      <div class="post-title">
                          <div class="profile">
                              <div class="media">
                                  <div class=" profile-img popover-cls user-img bg-size blur-up lazyloaded "
                                      data-bs-toggle="popover" data-placement="right" data-name="sufiya eliza"
                                      data-img="../assets/images/user-sm/15.jpg"
                                      style="background-image: url(); background-size: cover; background-position: center center; background-repeat: no-repeat; display: block;"
                                      data-bs-original-title="" title="">
                                      <img src="<%= posts[i].user.image %>"
                                          class="img-fluid blur-up lazyload bg-img" alt="user" style="width: 100%; height: 500px; ">
                                  </div>
                                  <div class="desc media-body">
                                      <h2 class="desc">
                                          <% if(posts[i].title.length> 40){ %>
                                              <h2 class="">
                                                  <%= posts[i].title.substr(1,40) + "..." %>
                                              </h2>
                                              <% }else{ %>
                                                  <h2>
                                                      <%= posts[i].title %>
                                                  </h2>
                                                  <% } %>
                                      </h2>
                                      <h2 class="desc"> Activity:
                                          <%= posts[i].activity %>
                                      </h2>
                                      <h3> Skill Level : [<%= posts[i].skill %>] </h3>
                                      <h2>Created by: <%= posts[i].user.userName %></h2>
                                  </div>
                              </div>
                          </div>
                          <div class="setting-btn ms-auto setting-dropdown no-bg">
                              <div class="btn-group custom-dropdown arrow-none dropdown-sm">
                                  <div role="button" data-bs-toggle="dropdown" aria-haspopup="true"
                                      aria-expanded="false" class="">

                                  </div>
                                  <div class="dropdown-menu dropdown-menu-right custom-dropdown"
                                      style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate3d(965px, 200px, 0px);"
                                      data-popper-placement="bottom-start">
                                      <ul>
                                          <li>
                                              <a href=""><svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                      height="24" viewBox="0 0 24 24" fill="none"
                                                      stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                      stroke-linejoin="round"
                                                      class="feather feather-edit icon-font-light iw-16 ih-16">
                                                      <path
                                                          d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7">
                                                      </path>
                                                      <path
                                                          d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z">
                                                      </path>
                                                  </svg>edit post</a>
                                          </li>
                                          <li>
                                              <a href=""><svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                      height="24" viewBox="0 0 24 24" fill="none"
                                                      stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                      stroke-linejoin="round"
                                                      class="feather feather-x-square icon-font-light iw-16 ih-16">
                                                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                      <line x1="9" y1="9" x2="15" y2="15"></line>
                                                      <line x1="15" y1="9" x2="9" y2="15"></line>
                                                  </svg>hide post</a>
                                          </li>
                                      </ul>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </a>
                  <div class="post-details">
                      <div class="img-wrapper">
                          <img src="<%= posts[i].image%>" class="img-fluid blur-up lazyloaded" alt="">

                      </div>
                      <div class="desc detail-box">
                        <h4><%= posts[i].address %> </h4>
                              <h3 style="">
                                  <%= new Date(posts[i].date).toLocaleString([],{dateStyle:'long', timeStyle:'short'}) %>
                              </h3>
                          <h3 class="desc tag">
                              <% for(let j=0; j < posts[i].tag.length; j++){ %>
                                  <span class="tag">#<%= posts[i].tag[j] %></span>
                                  <% }%>
                          </h3>
                          <div>
                              <p class="desc" style="white-space:pre-wrap;"><%= posts[i].description %></p>
                          </div>
                      </div>
                      <div class="like-panel">

                          <div class="right-stats">
                              <ul>

                                  <li>
                                      <h5>
                                          <span>
                                              <%=posts[i].attendance.length %> <%= posts[i].attendance.length === 1 ? "User Going" : "Users Going" %>
                                          </span>
                                      </h5>
                                  </li>
                              </ul>
                          </div>
                      </div>


                  </div>
              </div>



          </div>

          <% } %>
          <% } %>
          <% } %>



  </div>
</div>
</div>
</div>








